<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Uzytkownik">

    <TextView
            android:text="@string/none"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/Password_user_view"
            android:gravity="center" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/Login_user_view" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/Password_User"
            android:textSize="18sp" android:textStyle="bold"/>
    <TextView
            android:text="@string/none"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/Login_user_view"
            android:gravity="center" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/Avatar_user" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/Login_user"
            android:textSize="18sp" android:textStyle="bold"/>
    <TextView
            android:text="Login"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/Login_user"
            android:textAlignment="center" android:gravity="center"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/Avatar_user"/>
    <ImageView
            android:layout_width="168dp"
            android:layout_height="109dp"
            android:id="@+id/Avatar_user"
            tools:src="@tools:sample/backgrounds/scenic[0]"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" tools:srcCompat="@android:drawable/btn_star_big_on"/>
    <TextView
            android:text="@string/none"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/Email_user_view"
            android:gravity="center" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/Password_user_view" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/Email_user"
            android:textSize="18sp" android:textStyle="bold"/>
    <Button
            android:text="Edytuj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_edit_user"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="416dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/Email_user_view" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Password"
            android:layout_width="100dp"
            android:layout_height="42dp"
            android:id="@+id/Password_User"
            android:textAlignment="center"
            android:gravity="center" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/Login_user" android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="E-mail"
            android:layout_width="100dp"
            android:layout_height="43dp"
            android:id="@+id/Email_user"
            android:textAlignment="center" android:gravity="center"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/Password_User" android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>