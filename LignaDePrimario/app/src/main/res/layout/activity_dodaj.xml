<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Dodaj">

    <TextView
            android:text="Nazwa PL"
            android:layout_width="99dp"
            android:layout_height="32dp"
            android:id="@+id/nazwa_pl_textBox" android:paddingBottom="5dp"
            android:paddingTop="5dp" android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/mapView_add_tree" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.544"
            android:layout_marginTop="4dp"/>
    <EditText
            android:layout_width="170dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:text="@string/none"
            android:ems="10"
            android:id="@+id/nazwa_pl_editText"
            app:layout_constraintTop_toBottomOf="@+id/nazwa_pl_textBox"
            app:layout_constraintStart_toEndOf="@+id/mapView_add_tree" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.578" android:hint="PL"/>
    <TextView
            android:text="Nazwa LA"
            android:layout_width="99dp"
            android:layout_height="32dp"
            android:id="@+id/nazwa_la_textBox" android:paddingBottom="5dp"
            android:paddingTop="5dp" android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/mapView_add_tree" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.544" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nazwa_pl_editText"/>
    <EditText
            android:layout_width="170dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:text="@string/none"
            android:ems="10"
            android:id="@+id/nazwa_la_editText"
            app:layout_constraintStart_toEndOf="@+id/mapView_add_tree" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.578" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2" android:hint="LA"
            app:layout_constraintTop_toBottomOf="@+id/nazwa_la_textBox"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/linearLayout2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mapView_add_tree">
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/wspolrzedna_x" android:layout_weight="1"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/wspolrzedna_y" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:text="Nazwa miesjca"
            android:layout_width="125dp"
            android:layout_height="44dp"
            android:id="@+id/nazwa_miejsca_text"
            android:textAlignment="center"
            android:gravity="center" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nazwa_miejsca_edit" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:hint="Lokalizacja"
            app:layout_constraintStart_toEndOf="@+id/nazwa_miejsca_text" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.195" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"/>
    <TextView
            android:text="Województwo"
            android:layout_width="125dp"
            android:layout_height="44dp"
            android:id="@+id/wojewodztwo_text"
            android:textAlignment="center" android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nazwa_miejsca_text" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/wojewodztwo_edit"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/wojewodztwo_text"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nazwa_miejsca_edit" app:layout_constraintHorizontal_bias="0.195"
            android:text="@string/none" android:hint="Województwo"/>
    <TextView
            android:text="Adres"
            android:layout_width="125dp"
            android:layout_height="44dp"
            android:id="@+id/adres_text"
            android:gravity="center" android:textAlignment="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/wojewodztwo_text" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/adres_edit"
            android:padding="3dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Ulica, Nr"
            app:layout_constraintStart_toEndOf="@+id/adres_text"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/wojewodztwo_edit" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.195"/>
    <Button
            android:text="DALEJ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zapisz_nowe_drzewo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.433"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/opis_editText"
            app:layout_constraintVertical_bias="0.026"/>
    <ImageButton
            android:id="@+id/camera"
            android:layout_width="84dp"
            android:layout_height="72dp" app:srcCompat="@android:drawable/ic_menu_camera"
            android:background="@drawable/circle"
            android:padding="15dp"
            android:outlineAmbientShadowColor="@color/colorPrimaryDark"
            android:outlineSpotShadowColor="#FFFFFF"
            app:layout_constraintCircleRadius="@android:dimen/thumbnail_width"
            android:scaleType="fitCenter"
            android:layout_marginEnd="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mapView_add_tree"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/mapView_add_tree"
            app:layout_constraintHorizontal_bias="0.232"
            app:layout_constraintBottom_toBottomOf="@+id/mapView_add_tree"/>
    <ImageView
            android:layout_width="198dp"
            android:layout_height="152dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/mapView_add_tree"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <RadioGroup
            android:layout_width="160dp"
            android:layout_height="96dp"
            android:id="@+id/CheckGrup"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/adres_edit" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp">
        <CheckBox
                android:text="Pomnik "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBoxPomni" android:layout_weight="1"/>
        <CheckBox
                android:text="Green House"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBoxGreenhouse" android:layout_weight="1"/>
        <CheckBox
                android:text="Unknow Tree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBoxUnknownTree" android:layout_weight="1"/>
    </RadioGroup>
    <TextView
            android:text="Opis"
            android:layout_width="58dp"
            android:layout_height="21dp"
            android:id="@+id/opis_textView"
            android:textAlignment="center" android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/adres_edit" app:layout_constraintStart_toEndOf="@+id/CheckGrup"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/none"
            android:layout_width="212dp"
            android:layout_height="66dp"
            android:id="@+id/opis_editText" android:hint="Wpisz opis"
            android:padding="5dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/opis_textView"
            app:layout_constraintStart_toEndOf="@+id/CheckGrup" android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>