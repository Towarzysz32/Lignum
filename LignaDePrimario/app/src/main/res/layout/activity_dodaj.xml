<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Dodaj">

    <ScrollView
            android:layout_width="26dp"
            android:layout_height="713dp" tools:layout_editor_absoluteY="16dp"
            android:scrollbarStyle="insideInset" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="DALEJ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dalej"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.504"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintVertical_bias="0.101"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nazwa_miejsca_edit" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:hint="Lokalizacja"
            app:layout_constraintStart_toEndOf="@+id/nazwa_miejsca" android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/wojewodztwo_edit"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/wojewodztwo_text"
            android:layout_marginStart="8dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/nazwa_miejsca_edit"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/adres_edit"
            android:padding="3dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Ulica, Nr"
            app:layout_constraintStart_toEndOf="@+id/adres_text"
            android:layout_marginStart="8dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/wojewodztwo_edit" android:layout_marginEnd="16dp"/>
    <TextView
            android:text="Nazwa miesjca"
            android:layout_width="125dp"
            android:layout_height="44dp"
            android:id="@+id/nazwa_miejsca"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/Wojewodztwo_edit"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:textAlignment="center"
            app:layout_constraintVertical_bias="0.0" android:gravity="center"/>
    <TextView
            android:text="WojewÃ³dztwo"
            android:layout_width="125dp"
            android:layout_height="44dp"
            android:id="@+id/wojewodztwo_text"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center" android:gravity="center" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/nazwa_miejsca"/>
    <TextView
            android:text="Adres"
            android:layout_width="125dp"
            android:layout_height="44dp"
            android:id="@+id/adres_text"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:gravity="center" android:textAlignment="center" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/wojewodztwo_text"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/linearLayout2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mapView_add_tree">
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/wspolrzedna_x" android:layout_weight="1"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/wspolrzedna_y" android:layout_weight="1"/>
    </LinearLayout>
    <ImageButton
            android:id="@+id/camera"
            android:layout_width="84dp"
            android:layout_height="72dp" app:srcCompat="@android:drawable/ic_menu_camera"
            android:background="@drawable/circle"
            android:padding="15dp"
            android:outlineAmbientShadowColor="@color/colorPrimaryDark"
            android:outlineSpotShadowColor="#FFFFFF"
            app:layout_constraintCircleRadius="@android:dimen/thumbnail_width"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="@+id/mapView_add_tree" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/mapView_add_tree" android:layout_marginEnd="248dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.583"/>
    <ImageView
            android:layout_width="198dp"
            android:layout_height="152dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/mapView_add_tree"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/adres_edit"
    />
    <RadioGroup
            android:layout_width="164dp"
            android:layout_height="87dp"
            android:id="@+id/CheckGrup" app:layout_constraintStart_toEndOf="@+id/mapView_add_tree"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2">
        <CheckBox
                android:text="Pomnik "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBoxPomni" android:layout_weight="1"/>
        <CheckBox
                android:text="Green House"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBoxGreenhouse" android:layout_weight="1"/>
        <CheckBox
                android:text="Unknow Tree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBoxUnknownTree" android:layout_weight="1"/>
    </RadioGroup>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"/>
    <TextView
            android:text="Opis"
            android:layout_width="56dp"
            android:layout_height="24dp"
            android:id="@+id/textView8" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView7"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="@+id/textView7" android:textAlignment="center" android:gravity="center"/>
    <TextView
            android:text="@string/none"
            android:layout_width="293dp"
            android:layout_height="111dp"
            android:id="@+id/textView7" android:hint="Wpisz opis"
            android:padding="5dp" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginEnd="36dp" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>