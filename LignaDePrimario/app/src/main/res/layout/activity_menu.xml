<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Menu">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/linearLayout">
        <Button
                android:text="Dodaj"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/Add" android:layout_weight="1"
                android:background="#FFFFFF"
        />
        <Button
                android:text="Mapa"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/Map" android:layout_weight="1"
                android:background="#FFFFFF"
        />
        <Button
                android:text="Konto"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/User" android:layout_weight="1"
                android:background="#FFFFFF"
        />
        <Button
                android:text="Wyloguj"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/LogOut" android:layout_weight="1"
                android:background="#FFFFFF"
        />
    </LinearLayout>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="133dp" app:srcCompat="@drawable/las"
            android:id="@+id/imageView3" android:scaleType="fitXY" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.485" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>
    <EditText
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/none"
            android:ems="10"
            android:id="@+id/Szukaj" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            android:hint="Szukaj" android:paddingLeft="15dp" app:layout_constraintStart_toEndOf="@+id/search"
    />
    <ImageView
            android:layout_width="46dp"
            android:layout_height="45dp" app:srcCompat="@android:drawable/ic_menu_search"
            android:id="@+id/search"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toStartOf="@+id/Szukaj"
    />
    <ImageView
            android:layout_width="0dp"
            android:layout_height="241dp" app:srcCompat="@drawable/reklama"
            android:id="@+id/Reklama" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Szukaj" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.212"/>
</android.support.constraint.ConstraintLayout>